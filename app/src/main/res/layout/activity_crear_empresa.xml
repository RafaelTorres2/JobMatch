<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondopantallaempresa"
    android:fillViewport="true"
    tools:context=".ActivityEmpresa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_rounded_corner2"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/imageViewSeleccionarImagenActivityCrearEmpresa"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextTituloEmpresaActivityCrearEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Titulo empresa"
                        android:textColorHint="#8E8E8E"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextTipoEmpresaActivityCrearEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Tipo de negocio"
                        android:textColorHint="#8E8E8E"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_rounded_corner2"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En este momento aceptan:"
                    android:textColor="#4A4A4A"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empleados"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <CheckBox
                        android:id="@+id/checkBoxAceptanEmpleadosCreacionEmpresa"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Becarios"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <CheckBox
                        android:id="@+id/checkBoxAceptanBecariosCreacionEmpresa"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_rounded_corner2"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textoSeparadorSobreEmpresa"
                    android:layout_width="252dp"
                    android:layout_height="35dp"
                    android:text="Sobre nosotros"
                    android:textColor="#4A4A4A"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/editTextDescripcionEmpresaActivityCrearEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Descripción de la empresa"
                    android:textColor="#000000"
                    android:textColorHint="#8E8E8E"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_rounded_corner2"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textoSeparadorSobreEmpresa2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Información adicional"
                    android:textColor="#4A4A4A"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="Sitio web"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextSitioWebEmpresaActivityCrearEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Sitio web"
                        android:textColorHint="#8E8E8E"
                        android:textColor="#000000"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="Sectores"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextSectoresEmpresaActivityCrearEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Sectores"
                        android:textColorHint="#8E8E8E"
                        android:textColor="#000000"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="Fundación"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextFundacionEmpresaActivityCrearEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Fundación"
                        android:textColorHint="#8E8E8E"
                        android:textColor="#000000"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_rounded_corner2"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textoSeparadorSobreEmpresa3"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Contacto"
                    android:textColor="#4A4A4A"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textTextCorreoEmpresaActivityCrearEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correo electrónico"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextCorreoEmpresaActivityCrearEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Correo electrónico"
                        android:inputType="textEmailAddress"
                        android:textColorHint="#8E8E8E"
                        android:textColor="#000000"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numero de teléfono"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextNumeroEmpresaActivityCrearEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Numero teléfono"
                        android:inputType="phone"
                        android:textColorHint="#8E8E8E"
                        android:textColor="#000000"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_rounded_corner2"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico asociado a la cuenta de empresa"
                    android:textSize="20sp"
                    android:textColor="#4A4A4A"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextCorreoCuentaEmpresaCrearEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    android:textColorHint="#8E8E8E"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/botonCrearPublicacionEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Crear publicación empresa"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/teal_700"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>