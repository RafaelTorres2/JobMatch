<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_dynamic_neutral60"
    tools:context=".ActivityCrearCuentaEmpresa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/teal_700">

    <ImageView
        android:id="@+id/activityCrearCuentaEmpresaimageViewIconoVolverChat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:padding="5dp"
        android:src="@drawable/iconovolveruser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:text="Alta cuenta empresa"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_rounded_corner"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:layout_marginVertical="45dp">

            <EditText
                android:id="@+id/activityCrearCuentaEmpresaEditTextUsuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#8E8E8E"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="13dp"/>

            <EditText
                android:id="@+id/activityCrearCuentaEmpresaEditTextEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#8E8E8E"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="13dp"/>

            <EditText
                android:id="@+id/activityCrearCuentaEmpresaEditTextContrasenya"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#8E8E8E"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="13dp"/>

            <EditText
                android:id="@+id/activityCrearCuentaEmpresaEditTextRepetirContrasenya"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#000000"
                android:ems="10"
                android:hint="Repetir contraseña"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#8E8E8E"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="13dp"/>

            <Button
                android:id="@+id/activityCrearCuentaEmpresaBotonCrear"
                android:layout_width="259dp"
                android:layout_height="55dp"
                android:background="@drawable/rounded_corner"
                android:text="Crear"
                android:layout_gravity="center"
                android:layout_marginVertical="13dp"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>